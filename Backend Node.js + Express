const express = require('express');
const sqlite3 = require('sqlite3').verbose();
const fs = require('fs');
const path = require('path');
const basicAuth = require('express-basic-auth');

const app = express();
app.use(express.json({ limit: '10mb' }));
app.use(express.static('.'));

// Base de datos
const db = new sqlite3.Database('db.sqlite');
db.serialize(() => {
  db.run(`CREATE TABLE IF NOT EXISTS designs (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    image TEXT,
    json TEXT,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
  )`);
});

// Ruta pública: guardar diseño
app.post('/save', (req, res) => {
  const { image, json } = req.body;
  const filename = `designs/design_${Date.now()}.png`;
  const base64Data = image.replace(/^data:image\/png;base64,/, "");
  
  fs.writeFile(filename, base64Data, 'base64', (err) => {
    if (err) return res.json({ success: false });
    
    db.run(`INSERT INTO designs (image, json) VALUES (?, ?)`, [filename, json], function(err) {
      if (err) return res.json({ success: false });
      res.json({ success: true, id: this.lastID });
    });
  });
});

// Panel admin protegido con usuario/contraseña
app.use('/admin', basicAuth({
  users: { 'admin': 'remeras2025' }, // ← cambiá la contraseña!
  challenge: true,
  realm: 'Panel de diseños',
}));

app.get('/admin', (req, res) => {
  res.sendFile(path.join(__dirname, 'admin.html'));
});

app.get('/api/designs', (req, res) => {
  db.all(`SELECT id, image, created_at FROM designs ORDER BY id DESC`, (err, rows) => {
    res.json(rows);
  });
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`Servidor corriendo en puerto ${PORT}`));
